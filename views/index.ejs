<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/queens/home.css">
<%- include('./partials/nav') %>

<main>
  <% if (user) { %>
  <h1>MY TEAM</h1>
  <section id="user-team">
    <% console.log('here', user.profile);
    if (user.profile.team) {
      
      req.user.profile.team.forEach(teamQueen => { %>
        <div <%- teamQueen.eliminated ? 'class="eliminated"' : '' %> class="queen-card">
          <img src="/headshots/<%= teamQueen.name %>.webp" alt="<%= teamQueen.name %> headshot">
          <p><%= teamQueen.name %></p>
          <p><%= teamQueen.hometown %></p>
          <p><%= teamQueen.totalPoints %></p>
        </div>
    <% })} else { %>
      <h3>Recruit a Team!</h3>
    <% } %>
  </section>
  <% } %>

  <section id="rankings">
    <h1>CURRENT STANDINGS</h1>

  </section>
</main>

<%- include('./partials/footer') %>
